<body style="background: rgba(0, 0, 0, 0.048) !important;">

    <div class="d-flex flex-row flex-shrink-0" role="navigation">
        <nav class="d-flex flex-row flex-grow-1 navbar sticky-top navbar-light bg-white p-0">
            <!-- Logo -->
            <div id="brand" class="d-flex flex-column flex-grow-1 brand-content px-2">
            <a id="navbar-brand" class="navbar-brand d-flex align-items-center p-0 m-0" href="/" style="width:150px; margin-left:20px!important">
                <img src="img/logo.png" class="navbar-image py-2" alt="" loading="lazy">
            </a>
            </div>
        </nav>
    </div>
    
    <div id="head">

        <h2 style="margin:100px auto auto auto">Welcome back</h2>

        <!-- Alerts -->
        <div id="failedlog" class="alert alert-danger" role="alert" style="width:60%;margin:10px auto -30px auto;">
            
        </div>

        <script>
            $("#failedlog").hide();
        </script>

        <form style="width:60%;margin:50px auto 100px auto;" id="form" method="POST" action="/">
            <!-- Username input -->
            <div class="form-outline mb-4" style="background-color: white;">
                <input type="text" class="form-control" name="username" required/ >
                <label class="form-label" for="typeText">Username</label>
            </div>
            <!-- Password input -->
            <div class="form-outline mb-4" style="background-color: white;">
                <input type="password" class="form-control" name="password" required/ >
                <label class="form-label" for="typeText">Password</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4" style="font-size:15px;margin: auto;" id="submit">Sign in</button>

            <div class="text-center">
                <p>Not registered? <a href="/register" style="color:var(--main);text-decoration:none;">Register here</a></p>
            </div>
        </form>
    </div>
    
    <div style="position: absolute;bottom: 20px;width: 100%;text-align: center;">
        <footer>
            <span style="font-size: 14px;">Diastema Â© 2021</span>
        </footer>
    </div>
    
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"></script>

</body>
</html>